:root{--accent:#23c4e9;--primary:#0149ab;--bg-dark:#0b0b0b;--bg-card:rgba(255, 255, 255, 0.03);--text-light:#f5f5f5;--text-gray:#9aa9b6}body{margin:0;font-family:inter,roboto,sans-serif;background-color:var(--bg-dark);color:var(--text-light);overflow-x:hidden}a{color:var(--accent);text-decoration:none;transition:color .3s ease}a:hover{color:var(--primary)}.logo-anim{height:72px;transition:transform .6s ease}.logo-anim:hover{transform:rotate(2deg)scale(1.05)}.card{background:var(--bg-card);border:1px solid rgba(255,255,255,6%);border-radius:16px;padding:24px;backdrop-filter:blur(8px);box-shadow:0 0 20px rgba(0,0,0,.25);transition:transform .3s ease,box-shadow .3s ease}.card:hover{transform:translateY(-4px);box-shadow:0 0 25px rgba(35,196,233,.2)}.download-btn{background:linear-gradient(90deg,var(--accent),var(--primary));color:#fff;padding:.7rem 1.2rem;border-radius:1rem;font-weight:700;text-transform:uppercase;letter-spacing:.5px;border:none;cursor:pointer;transition:all .3s ease;display:inline-block}.download-btn:hover{box-shadow:0 0 20px var(--accent);transform:scale(1.05)}.feature{background:rgba(255,255,255,5%);padding:.5rem 1rem;border-radius:10px;color:var(--text-gray);font-weight:600;display:inline-block;margin:.3rem}h1,h2,h3{color:#fff;font-weight:600;letter-spacing:.5px}h1 span{color:var(--accent)}.section{padding:80px 10%;max-width:1200px;margin:0 auto}.section-dark{background-color:#111;border-radius:16px;padding:60px 10%}footer{background:#050505;color:var(--text-gray);text-align:center;padding:30px;font-size:.9rem}.fade-in{opacity:0;transform:translateY(20px);transition:all .8s ease}.fade-in.visible{opacity:1;transform:translateY(0)}@media(max-width:768px){.section{padding:50px 6%}.card{padding:16px}h1{font-size:1.8rem}.download-btn{font-size:.9rem;padding:.6rem 1rem}}